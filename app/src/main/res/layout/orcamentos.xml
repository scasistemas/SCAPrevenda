<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:weightSum="11">




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:listSelector="@drawable/list_selector"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_alignParentBottom="true" android:gravity="center_vertical"
        android:layout_height="fill_parent"
        android:paddingTop="0sp"
        android:background="#ff14447a"
        android:layout_weight="10"
        >

        <Button
            android:text=" Enviar "
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:onClick="enviar"
            android:id="@+id/SairNovoPed"
            android:layout_margin="2dp"
            android:background="@drawable/button_shape"
            android:textColor="#fff6f6fa"
            android:textSize="12sp"/>


        <Button
            android:text="   Sair   "
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:onClick="sair"
            android:textSize="12sp"
            android:background="@drawable/button_shape_yellow"
            android:textColor="#fff6f6fa"
            android:layout_marginLeft="2dp"
            android:layout_margin="2dp"/>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="fill_parent"
            android:paddingTop="0sp"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:layout_gravity="right"

            >
            <TextView android:layout_width="fill_parent" android:layout_height="20sp"
                android:text=" Total:" android:gravity="right"
                android:textColor="#fffefffd"
                android:layout_alignParentRight="true"

                />
            <TextView android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:id="@+id/txSaldo"
                android:layout_gravity="left"
                android:textColor="#00F"
                android:layout_alignParentRight="true"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
