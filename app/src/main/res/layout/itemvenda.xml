<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="wrap_content"  android:paddingTop="1sp"
        android:id="@+id/tela">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/descricao"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:text="TESTANDO"
            android:textColor="#ff404656"
            />

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"  >
        <TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:text="Qtd. " android:layout_gravity="center_vertical" android:paddingTop="4dp"
            android:textColor="#2f6699"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:id="@+id/quantidade"
            android:layout_marginTop="0sp"
            android:paddingTop="4dp"
            android:textSize="14dp"
            android:layout_alignParentLeft="true"
            android:textColor="#ff404656"

            android:text="3"/>
        <TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:text=" R$ "
            android:textColor="#2f6699"
            android:layout_alignParentRight="true"
            android:paddingTop="4dp"
            android:paddingLeft="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:paddingTop="0sp"
            android:id="@+id/preco"
            android:layout_alignParentRight="true"
            android:textColor="#ff404656"
            android:text="3"
            />
        <TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:text="R$ " android:layout_gravity="center_vertical"
            android:textColor="#2f6699"
            android:layout_alignParentRight="true"
            android:paddingTop="4dp"
            android:paddingLeft="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:paddingTop="0sp"
            android:id="@+id/precoTotal"
            android:layout_alignParentRight="true"
            android:textColor="#ff404656"
            android:text="3"
            />

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="top">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Opções"
            android:layout_marginRight="2dp"
            android:id="@+id/op"
            android:layout_marginTop="0dp"
            android:gravity="top"
            android:textColor="#ffff"
            android:textSize="12sp"

            android:background="@drawable/button_shape_yellow"/>

</LinearLayout>

    </LinearLayout>



</LinearLayout>