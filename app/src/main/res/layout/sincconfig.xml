<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">

    <Button android:id="@+id/enviar"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="20dp" android:layout_gravity="center_horizontal"
        android:text="Enviar"
        android:background="@drawable/button_shape"
        android:textColor="#ffff"/>




    <Button android:id="@+id/voltar"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="20dp" android:layout_gravity="center_horizontal"
        android:text="Voltar"
        android:background="@drawable/button_shape_yellow"
        android:textColor="#ffff"/>

    <TextView android:id="@+id/notificacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>



</LinearLayout>
