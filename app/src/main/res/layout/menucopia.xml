<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >



    <Button android:text="Atender Cliente"
        android:id="@+id/btAtividadesMenuPricipal" android:layout_gravity="center"
        android:layout_width="350dp" android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        ></Button>

    <Button android:text="Pedidos de Venda"
        android:id="@+id/btPedidosMenuPricipal" android:layout_gravity="center"
        android:layout_width="350dp" android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"></Button>
    <Button android:text="Efetuar Backup"
        android:id="@+id/btBackup" android:layout_gravity="center"
        android:layout_width="350dp" android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"></Button>




    <Button  android:text="Sair"
        android:id="@+id/btSairMenuPricipal" android:layout_gravity="center"
        android:layout_width="350dp" android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        ></Button>


    <LinearLayout android:layout_width="fill_parent"
        android:layout_marginTop="0sp"
        android:paddingTop="0sp" android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/btSincMenuPricipal"
            android:src="@drawable/ic_menu_rotate"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            />

    </LinearLayout>


    <LinearLayout android:layout_width="fill_parent"
        android:layout_marginTop="0sp"
        android:paddingTop="0sp"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        >

        <TextView android:layout_width="145sp" android:layout_height="20sp"
            android:layout_marginRight="100sp"
            android:textColor="#00F"
            android:text=" " android:layout_gravity="right" />


        <TextView android:layout_width="245sp" android:layout_height="20sp"
            android:layout_marginRight="100sp"
            android:id="@+id/vendedor"
            android:textColor="#00F"
            android:text="" android:layout_gravity="right" />

    </LinearLayout>


</LinearLayout>

