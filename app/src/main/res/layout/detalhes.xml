                            android:textColor="#2f6699"
                            android:textStyle="italic"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            />
                        <TextView android:layout_width="100dp" android:layout_height="20dp"
                            android:text="Total do item"
                            android:textColor="#2f6699"
                            android:textStyle="italic"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liedtx2"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        >
                        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
