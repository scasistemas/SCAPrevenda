<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="6dp" android:background="@drawable/bg">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:id="@+id/ligeral"
            android:layout_height="match_parent">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android" android:visibility="gone"
                    android:orientation="vertical" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:paddingLeft="5sp" android:id="@+id/lidesc1">
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="horizontal" android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:paddingLeft="5sp" android:background="#2f6699">
                        <RadioButton android:layout_width="wrap_content"
                            android:id="@+id/rb1" android:layout_height="wrap_content"
                             ></RadioButton>
                        <TextView android:id="@+id/txtdesc1" android:layout_width="50dp" android:layout_height="fill_parent" android:textColor="#fffffffc" android:layout_weight="5"
                            android:text="Detalhes de  Preço:" android:gravity="center" android:layout_gravity="center" android:textSize="18sp" android:layout_marginTop="2dp" android:layout_marginBottom="4dp" />
                        <Button android:id="@+id/btcalc1" android:layout_width="50dp"
                            android:layout_height="35dp" android:text="Calc."  android:layout_weight="1"
                            android:textColor="#fffefefe" android:tag="1" android:padding="4dp" android:layout_gravity="center"
                            android:textStyle="bold"  android:background="@drawable/button_shape_yellow" />
                        </LinearLayout>
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/litxt1"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        >
                        <TextView android:layout_width="100dp" android:layout_height="20dp"
                            android:text="Quantidade"
                            android:textColor="#2f6699"
                            android:textStyle="italic"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                        />
                            <TextView android:layout_width="100dp" android:layout_height="20dp"
                                android:text="Preço"
                                android:textColor="#2f6699"
                                android:textStyle="italic"
                                android:gravity="center_horizontal"
                                android:layout_weight="1"
                                />
                            <TextView android:layout_width="100dp" android:layout_height="20dp"

                                android:text="Total do item"
                                android:textColor="#2f6699"
                                android:textStyle="italic"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/liedtx1"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            >
                            <EditText android:layout_width="100dp" android:layout_height="wrap_content"
                                android:id="@+id/edtxqtd1"
                                android:textColor="#2f6699"
                                android:textStyle="italic"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                android:inputType="numberDecimal"
                                />

                            <EditText android:layout_width="100dp" android:layout_height="wrap_content"
                                android:id="@+id/edtxpreco1"
                                android:textColor="#2f6699"
                                android:textStyle="italic"
                                android:inputType="numberDecimal"
                                android:layout_weight="1"
                                />
                            <EditText android:layout_width="100dp" android:layout_height="wrap_content"
                                android:id="@+id/edtxtotal1"
                                android:textColor="#2f6699"
                                android:textStyle="italic"
                                android:gravity="right"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                />
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android" android:visibility="gone"
                    android:orientation="vertical" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:paddingLeft="5sp" android:id="@+id/lidesc2">
