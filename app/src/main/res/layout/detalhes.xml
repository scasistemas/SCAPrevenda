                            android:textColor="#2f6699"
                            android:textStyle="italic"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            />

                        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
                            android:id="@+id/edtxpreco2"
                            android:textColor="#2f6699"
                            android:textStyle="italic"
                            android:inputType="numberDecimal"
                            android:layout_weight="1"
                            />
                        <EditText android:layout_width="100dp" android:layout_height="wrap_content"
                            android:id="@+id/edtxtotal2"
                            android:textColor="#2f6699"
                            android:textStyle="italic"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android" android:visibility="gone"
                    android:orientation="vertical" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:paddingLeft="5sp" android:id="@+id/lidesc3">

                    <LinearLayout
                        android:orientation="horizontal" android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:paddingLeft="5sp" android:background="#2f6699">
                            <RadioButton android:layout_width="wrap_content"
                                android:id="@+id/rb3" android:layout_height="wrap_content"
                                 ></RadioButton>
                        <TextView android:id="@+id/txtdesc3" android:layout_width="50dp" android:layout_height="fill_parent" android:textColor="#fffffffc" android:layout_weight="5"
